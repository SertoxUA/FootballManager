<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/chooseTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </android.support.design.widget.AppBarLayout>


    <Button
        android:id="@+id/next1"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="@string/next"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintLeft_toRightOf="@+id/selectTeam"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/selectTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/selectTeam"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/demnia"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yong"
        tools:text="@string/demnia" />

    <Button
        android:id="@+id/yong"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_green_light"
        tools:text="@string/yong"
        app:layout_constraintTop_toBottomOf="@+id/dynamo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/dynamo"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTeam"
        tools:text="@string/dynamo" />

    <Button
        android:id="@+id/odder"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintBaseline_toBaselineOf="@+id/dynamo"
        app:layout_constraintLeft_toRightOf="@+id/dynamo"
        tools:text="@string/odder" />

    <Button
        android:id="@+id/kuala"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        tools:text="@string/kuala"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/odder"
        app:layout_constraintLeft_toRightOf="@+id/yong"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/sinergi"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintLeft_toRightOf="@+id/demnia"
        app:layout_constraintTop_toBottomOf="@+id/kuala"
        tools:text="@string/sinergi" />


</android.support.constraint.ConstraintLayout>